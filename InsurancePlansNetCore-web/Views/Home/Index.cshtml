@model InsurancePlansNetCore_web.Controllers.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@if (!string.IsNullOrWhiteSpace(Model.errorMessage))
{
    <div>@Model.errorMessage</div>
}
<div class="text-center container-fluid hero">
    <div class="row justify-content-end">
        <div class="bg-white pl-5 pt-4 pr-4 pb-4 rounded shadow col-6 mr-5 mt-5">
            <div class="row justify-content-center">
                <div class="container choose_product">
                    <div class="title d-flex pt-5">
                        Get a quote
                    </div>
                    <div class="sub-title d-flex pb-2">
                        in less than 5 minutes
                    </div>
                    <form class="form-inline pb-5" asp-controller="Home" asp-action="RedirectToService">
