                            <label for="zipcode" class="sr-only">ZIP CODE:</label>
                            <input type="text" class="form-control" id="zipcode" placeholder="Zip Code" asp-for="Lead.ZipCode">
                        </div>
                        <div class="form-group mr-2">
                            <label for="service" class="sr-only">Choose Service</label>
                            <select class="form-control" asp-items="Model.Services" asp-for="Lead.InsuranceServiceId">
                                <option value="">Select Service</option>
                            </select>
                        </div>
                        <div class="form-group mr-2">
                            <button type="submit" class="btn btn-warning">Get a Quote</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
